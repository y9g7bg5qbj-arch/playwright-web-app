{
  "manifest_version": 3,
  "name": "Vero Test Recorder",
  "version": "1.0.0",
  "description": "Record browser interactions and generate Vero DSL test code for the Vero Test Automation IDE",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Vero Test Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/vero-generator.js",
        "content/selector-generator.js",
        "content/highlighter.js",
        "content/recorder.js"
      ],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "devtools_page": "devtools/devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/content.css", "lib/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
