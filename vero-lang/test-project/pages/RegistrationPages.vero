# Registration Flow Pages - Field definitions only (protected)

PAGE RegistrationHomePage {
    FIELD heroHeading = "h1.hero-title"
    FIELD signUpButton = "button:has-text('Sign Up')"
    FIELD loginLink = "a:has-text('Log In')"
    FIELD searchInput = "[placeholder='Search...']"
}

PAGE SignUpPage {
    FIELD firstNameInput = "[name='firstName'], [placeholder*='First Name']"
    FIELD lastNameInput = "[name='lastName'], [placeholder*='Last Name']"
    FIELD emailInput = "[name='email'], [type='email']"
    FIELD passwordInput = "[name='password']"
    FIELD confirmPasswordInput = "[name='confirmPassword']"
    FIELD termsCheckbox = "[type='checkbox']"
    FIELD submitBtn = "button:has-text('Create Account')"
    FIELD errorMessage = "[data-testid='error-message']"
    FIELD successMessage = "[data-testid='success-message']"
}

PAGE RegistrationDashboardPage {
    FIELD welcomeMessage = "[data-testid='welcome-message']"
    FIELD userAvatar = "[data-testid='user-avatar']"
    FIELD logoutButton = "button:has-text('Log Out')"
    FIELD settingsLink = "a:has-text('Settings')"
    FIELD notificationBell = "[data-testid='notifications']"
}
