# LoginPage - Field definitions only (protected)
# Access these fields through LoginPageActions

PAGE LoginPage {
    FIELD emailInput = "[name=email], [type=email], input[placeholder*='Email']"
    FIELD passwordInput = "[name=password], [type=password]"
    FIELD submitBtn = "[type=submit], button:has-text('Sign In')"
    FIELD errorMessage = ".error-message, [role=alert]"
    FIELD rememberMeCheckbox = "[type=checkbox]"
}
