# Grammar Test 65: Variable Assignment and Verification
# Tests FLAG/TEXT assignment from page methods and VERIFY patterns

# Page definition for testing
PAGE TestPage {
    FIELD element = "#test-element"
}

# PageActions definition for testing
PAGEACTIONS TestPageActions FOR TestPage {
    isElementVisible RETURNS FLAG {
        RETURN element
    }

    getElementText RETURNS TEXT {
        RETURN element
    }
}

# Feature using variable assignment
FEATURE PerformAssignmentTest {

    SCENARIO TestFlagAssignment {
        OPEN "https://example.com"

        # Verify element directly
        VERIFY TestPage.element IS VISIBLE
        VERIFY TestPage.element IS NOT HIDDEN
    }

    SCENARIO TestTextAssignment {
        OPEN "https://example.com"

        # TEXT = PageActions.method pattern
        TEXT elementText = TestPageActions.getElementText
        VERIFY elementText IS CONTAINS "Example"
        VERIFY elementText IS CONTAINS "Example Domain"
    }
}
