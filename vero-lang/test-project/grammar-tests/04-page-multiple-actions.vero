# Test: Page with Multiple Actions
# Category: Page Objects - Multiple Actions (Inline Pattern)

PAGE CheckoutPage {
    FIELD cardNumber = "#card-number"
    FIELD cvv = "#cvv"
    FIELD expiry = "#expiry"
    FIELD totalAmount = ".total"
    FIELD placeOrderBtn = "Place Order"

    fillCardDetails WITH card, cvvVal, expiryDate {
        FILL cardNumber WITH card
        FILL cvv WITH cvvVal
        FILL expiry WITH expiryDate
    }

    getTotalAmount RETURNS TEXT {
        RETURN totalAmount
    }

    placeOrder {
        CLICK placeOrderBtn
        WAIT 2 SECONDS
    }
}
