# Test: Page with Multiple PAGEACTIONS
# Category: Page Objects - Multiple Actions (New Pattern)

PAGE CheckoutPage {
    FIELD cardNumber = "#card-number"
    FIELD cvv = "#cvv"
    FIELD expiry = "#expiry"
    FIELD totalAmount = ".total"
    FIELD placeOrderBtn = "Place Order"
}

PAGEACTIONS CheckoutPageActions FOR CheckoutPage {
    fillCardDetails WITH card, cvvValue, expiryDate {
        FILL cardNumber WITH card
        FILL cvv WITH cvvValue
        FILL expiry WITH expiryDate
    }

    getTotalAmount RETURNS TEXT {
        RETURN TEXT OF totalAmount
    }

    placeOrder {
        CLICK placeOrderBtn
        WAIT 2 SECONDS
    }
}
