# Test: Feature with Multiple Use Statements
# Category: Features - Multiple Uses (Inline Actions)

PAGE LoginPage {
    FIELD emailInput = "Email"

    isEmailVisible RETURNS FLAG {
        RETURN emailInput
    }

    enterEmail WITH val {
        FILL emailInput WITH val
    }
}

PAGE DashboardPage {
    FIELD header = "h1"

    isHeaderVisible RETURNS FLAG {
        RETURN header
    }

    getHeaderText RETURNS TEXT {
        RETURN header
    }
}

PAGE ProfilePage {
    FIELD avatar = ".avatar"

    isAvatarVisible RETURNS FLAG {
        RETURN avatar
    }
}

FEATURE MultipleUsesFeature {
    USE LoginPage
    USE DashboardPage
    USE ProfilePage

    SCENARIO AccessAllPages {
        # Verify visibility using direct page field references
        VERIFY LoginPage.emailInput IS VISIBLE

        VERIFY DashboardPage.header IS VISIBLE

        VERIFY ProfilePage.avatar IS VISIBLE
    }
}
