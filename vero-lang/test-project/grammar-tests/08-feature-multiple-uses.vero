# Test: Feature with Multiple Use Statements
# Category: Features - Multiple Uses (Updated to PAGEACTIONS Pattern)

PAGE LoginPage {
    FIELD emailInput = "Email"
}

PAGE DashboardPage {
    FIELD header = "h1"
}

PAGE ProfilePage {
    FIELD avatar = ".avatar"
}

PAGEACTIONS LoginPageActions FOR LoginPage {
    isEmailVisible RETURNS FLAG {
        RETURN VISIBLE OF emailInput
    }

    enterEmail WITH value {
        FILL emailInput WITH value
    }
}

PAGEACTIONS DashboardPageActions FOR DashboardPage {
    isHeaderVisible RETURNS FLAG {
        RETURN VISIBLE OF header
    }

    getHeaderText RETURNS TEXT {
        RETURN TEXT OF header
    }
}

PAGEACTIONS ProfilePageActions FOR ProfilePage {
    isAvatarVisible RETURNS FLAG {
        RETURN VISIBLE OF avatar
    }
}

FEATURE MultipleUsesFeature {
    USE LoginPageActions
    USE DashboardPageActions
    USE ProfilePageActions

    SCENARIO AccessAllPages {
        FLAG isEmail = PERFORM LoginPageActions.isEmailVisible
        VERIFY isEmail IS TRUE

        FLAG isHeader = PERFORM DashboardPageActions.isHeaderVisible
        VERIFY isHeader IS TRUE

        FLAG isAvatar = PERFORM ProfilePageActions.isAvatarVisible
        VERIFY isAvatar IS TRUE
    }
}
