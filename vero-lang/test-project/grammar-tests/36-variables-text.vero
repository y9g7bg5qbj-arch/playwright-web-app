# Test: Text Variable Declarations
# Category: Variables - Text

FEATURE TextVariables {
    SCENARIO TextVariableVariations {
        # Simple string
        TEXT username = "testuser"

        # Email format
        TEXT email = "user@example.com"

        # Empty string
        TEXT blank = ""

        # String with spaces
        TEXT fullName = "John Doe"

        # String with special characters
        TEXT special = "user+tag@example.com"

        # String with escaped quotes
        TEXT quoted = "Say \"Hello\""

        # URL string
        TEXT siteUrl = "https://example.com/path?param=value"

        # Use in action
        FILL "username" WITH username
        FILL "email" WITH email
        LOG fullName
    }
}
