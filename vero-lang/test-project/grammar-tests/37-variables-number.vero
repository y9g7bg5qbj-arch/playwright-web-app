# Test: Number Variable Declarations
# Category: Variables - Number

feature NumberVariables {
    scenario NumberVariableVariations {
        # Integer
        number total = 5
        number zero = 0
        number large = 999999

        # Decimal
        number price = 99.99
        number percentage = 0.5
        number small = 0.001

        # Use in comparison
        if total > 0 {
            log "Positive"
        }

        # Use in repeat
        repeat total times {
            log "Iteration"
        }

        # Use in fill
        fill "quantity" with total
    }
}
