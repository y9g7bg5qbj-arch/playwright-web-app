# Test: Contains Assertions
# Category: Assertions - Contains (Updated to PAGEACTIONS Pattern)

PAGE ContainsPage {
    FIELD message = ".message"
    FIELD error = ".error"
}

PAGEACTIONS ContainsPageActions FOR ContainsPage {
    getMessageText RETURNS TEXT {
        RETURN TEXT OF message
    }

    getErrorText RETURNS TEXT {
        RETURN TEXT OF error
    }

    isMessageVisible RETURNS FLAG {
        RETURN VISIBLE OF message
    }

    isErrorVisible RETURNS FLAG {
        RETURN VISIBLE OF error
    }
}

FEATURE ContainsAssertions {
    USE ContainsPageActions

    SCENARIO ContainsChecks {
        # Contains with getters
        TEXT messageText = PERFORM ContainsPageActions.getMessageText
        VERIFY messageText CONTAINS "Hello"
        VERIFY messageText CONTAINS "Welcome"

        # Not contains
        VERIFY messageText NOT CONTAINS "Error"

        TEXT errorText = PERFORM ContainsPageActions.getErrorText
        VERIFY errorText NOT CONTAINS "Success"

        # Contains with variable
        TEXT expected = "expected text"
        VERIFY messageText CONTAINS expected
    }
}
