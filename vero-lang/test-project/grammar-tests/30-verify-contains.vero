# Test: Contains Assertions
# Category: Assertions - Contains (Inline Actions)

PAGE ContainsPage {
    FIELD message = ".message"
    FIELD errorEl = ".error"

    getMessageText RETURNS TEXT {
        RETURN message
    }

    getErrorText RETURNS TEXT {
        RETURN errorEl
    }

    isMessageVisible RETURNS FLAG {
        RETURN message
    }

    isErrorVisible RETURNS FLAG {
        RETURN errorEl
    }
}

FEATURE ContainsAssertions {

    SCENARIO ContainsChecks {
        # Contains with page field references
        VERIFY ContainsPage.message IS CONTAINS "Hello"
        VERIFY ContainsPage.message IS CONTAINS "Welcome"

        # Not contains
        VERIFY ContainsPage.message IS NOT CONTAINS "Error"

        VERIFY ContainsPage.errorEl IS NOT CONTAINS "Success"

        # Contains with variable
        TEXT expected = "expected text"
        VERIFY ContainsPage.message IS CONTAINS expected
    }
}
