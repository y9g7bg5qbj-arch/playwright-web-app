# Test: If Statement Variations
# Category: Control Flow - If

page IfPage {
    field btn = "Submit"
    field errorMsg = ".error"
}

feature IfStatements {
    use IfPage

    scenario IfStatementVariations {
        # Simple if
        if btn is visible {
            click btn
        }

        # If with page field
        if IfPage.btn is enabled {
            click IfPage.btn
        }

        # If with is not
        if errorMsg is not visible {
            log "No errors"
        }

        # If with is hidden
        if errorMsg is hidden {
            log "Error hidden"
        }
    }
}
