# Test: If-Else Statement
# Category: Control Flow - If-Else

feature IfElseStatements {
    scenario IfElseVariations {
        # Simple if-else
        if errorMsg is visible {
            log "Error found"
            take screenshot "error"
        } else {
            log "No errors"
        }

        # If-else with multiple statements
        if submitBtn is enabled {
            click submitBtn
            wait 2 seconds
            log "Submitted"
        } else {
            log "Button disabled"
            take screenshot "disabled-state"
        }
    }
}
