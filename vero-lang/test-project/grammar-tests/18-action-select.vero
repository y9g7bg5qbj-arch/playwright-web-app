# Test: Select Action Variations
# Category: Actions - Select

page DropdownPage {
    field countryDropdown = "#country"
    field stateDropdown = "#state"
}

feature SelectActions {
    use DropdownPage

    scenario SelectVariations {
        # Select with strings
        select "United States" from "country"

        # Select with page field
        select "California" from DropdownPage.stateDropdown

        # Select with variable
        text selectedCountry = "Canada"
        select selectedCountry from countryDropdown
    }
}
