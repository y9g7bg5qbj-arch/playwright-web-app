# Test: PERFORM Action Variations
# Category: Actions - PERFORM (formerly DO)

PAGE LoginPage {
    FIELD emailInput = "Email"
    FIELD passwordInput = "Password"
    FIELD submitBtn = "Submit"
}

PAGEACTIONS LoginPageActions FOR LoginPage {
    login WITH email, password {
        FILL emailInput WITH email
        FILL passwordInput WITH password
        CLICK submitBtn
    }

    quickLogin WITH email {
        FILL emailInput WITH email
        CLICK submitBtn
    }

    logout {
        CLICK "Logout"
    }
}

FEATURE PerformActions {
    USE LoginPageActions

    SCENARIO PerformActionVariations {
        # PERFORM without arguments
        PERFORM LoginPageActions.logout

        # PERFORM with single argument
        PERFORM LoginPageActions.quickLogin WITH "test@example.com"

        # PERFORM with multiple arguments
        PERFORM LoginPageActions.login WITH "admin@example.com", "password123"

        # PERFORM with variable arguments
        TEXT email = "user@example.com"
        TEXT password = "secret"
        PERFORM LoginPageActions.login WITH email, password
    }
}
