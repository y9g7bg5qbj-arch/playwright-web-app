# Test: Click Action Variations
# Category: Actions - Click (Updated to PAGEACTIONS Pattern)

PAGE ClickTestPage {
    FIELD button = "Submit"
    FIELD link = ".nav-link"
    FIELD primaryButton = ".button-primary"
}

PAGEACTIONS ClickTestPageActions FOR ClickTestPage {
    clickButton {
        CLICK button
    }

    clickLink {
        CLICK link
    }

    clickPrimaryButton {
        CLICK primaryButton
    }
}

FEATURE ClickActions {
    USE ClickTestPageActions

    SCENARIO ClickVariations {
        # Click with string (direct text)
        CLICK "Submit"

        # Click with CSS selector (direct)
        CLICK ".button-primary"

        # Click via PageActions (preferred)
        PERFORM ClickTestPageActions.clickButton
        PERFORM ClickTestPageActions.clickLink
        PERFORM ClickTestPageActions.clickPrimaryButton
    }
}
