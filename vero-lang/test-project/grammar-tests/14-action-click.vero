# Test: Click Action Variations
# Category: Actions - Click (Inline Actions)

PAGE ClickTestPage {
    FIELD btn = "Submit"
    FIELD navLink = ".nav-link"
    FIELD primaryButton = ".button-primary"

    clickButton {
        CLICK btn
    }

    clickNavLink {
        CLICK navLink
    }

    clickPrimaryButton {
        CLICK primaryButton
    }
}

FEATURE ClickActions {

    SCENARIO ClickVariations {
        # Click with string (direct text)
        CLICK "Submit"

        # Click with CSS selector (direct)
        CLICK ".button-primary"

        # Click via Page actions (preferred)
        PERFORM ClickTestPage.clickButton
        PERFORM ClickTestPage.clickNavLink
        PERFORM ClickTestPage.clickPrimaryButton
    }
}
