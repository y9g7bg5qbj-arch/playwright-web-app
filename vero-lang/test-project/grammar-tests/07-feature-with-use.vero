# Test: Feature with Use Statement
# Category: Features - Use (Updated to PAGEACTIONS Pattern)

PAGE LoginPage {
    FIELD emailInput = "Email"
    FIELD submitBtn = "Submit"
}

PAGEACTIONS LoginPageActions FOR LoginPage {
    enterEmail WITH value {
        FILL emailInput WITH value
    }

    clickSubmit {
        CLICK submitBtn
    }
}

FEATURE FeatureWithUse {
    USE LoginPageActions

    SCENARIO UseLoginPage {
        PERFORM LoginPageActions.enterEmail WITH "test@example.com"
        PERFORM LoginPageActions.clickSubmit
    }
}
