# Test: Return Statement Variations
# Category: Page Actions - Return (Inline Pattern)

PAGE ReturnPage {
    FIELD result = ".result"
    FIELD statusText = ".status"

    # Return field reference
    getResultText RETURNS TEXT {
        RETURN result
    }

    # Action without return
    clickResult {
        CLICK result
    }

    # Getter with field return
    getStatusText RETURNS TEXT {
        RETURN statusText
    }
}

FEATURE ReturnTests {
    USE ReturnPage

    SCENARIO TestReturnStatements {
        TEXT resultText = ReturnPage.getResultText
        VERIFY ReturnPage.result IS VISIBLE
    }
}
