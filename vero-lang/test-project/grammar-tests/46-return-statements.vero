# Test: Return Statement Variations
# Category: PageActions - Return (New Pattern)

PAGE ReturnPage {
    FIELD result = ".result"
    FIELD statusText = ".status"
}

PAGEACTIONS ReturnPageActions FOR ReturnPage {
    # Return text of element
    getResultText RETURNS TEXT {
        RETURN TEXT OF result
    }

    # Return visibility flag
    isResultVisible RETURNS FLAG {
        RETURN VISIBLE OF result
    }

    # Action without return
    clickResult {
        CLICK result
    }

    # Getter with text return
    getStatusText RETURNS TEXT {
        RETURN TEXT OF statusText
    }
}

FEATURE ReturnTests {
    USE ReturnPageActions

    SCENARIO TestReturnStatements {
        TEXT resultText = PERFORM ReturnPageActions.getResultText
        FLAG isVisible = PERFORM ReturnPageActions.isResultVisible
        VERIFY isVisible IS TRUE
    }
}
