# Test: Fill Action Variations
# Category: Actions - Fill (Inline Actions)

PAGE FillTestPage {
    FIELD emailInput = "Email"
    FIELD passwordInput = "Password"
    FIELD quantityInput = "quantity"

    enterEmail WITH val {
        FILL emailInput WITH val
    }

    enterPassword WITH val {
        FILL passwordInput WITH val
    }

    enterQuantity WITH qty {
        FILL quantityInput WITH qty
    }
}

FEATURE FillActions {

    SCENARIO FillVariations {
        # Fill with string value via Page
        PERFORM FillTestPage.enterEmail WITH "test@example.com"

        # Fill with number via Page
        PERFORM FillTestPage.enterQuantity WITH "5"

        # Fill with variable
        TEXT email = "dynamic@example.com"
        PERFORM FillTestPage.enterEmail WITH email

        # Direct fill (still allowed for simple cases)
        FILL "email" WITH "direct@example.com"
    }
}
