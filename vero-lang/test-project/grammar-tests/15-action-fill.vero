# Test: Fill Action Variations
# Category: Actions - Fill (Updated to PAGEACTIONS Pattern)

PAGE FillTestPage {
    FIELD emailInput = "Email"
    FIELD passwordInput = "Password"
    FIELD quantityInput = "quantity"
}

PAGEACTIONS FillTestPageActions FOR FillTestPage {
    enterEmail WITH value {
        FILL emailInput WITH value
    }

    enterPassword WITH value {
        FILL passwordInput WITH value
    }

    enterQuantity WITH qty {
        FILL quantityInput WITH qty
    }
}

FEATURE FillActions {
    USE FillTestPageActions

    SCENARIO FillVariations {
        # Fill with string value via PageActions
        PERFORM FillTestPageActions.enterEmail WITH "test@example.com"

        # Fill with number via PageActions
        PERFORM FillTestPageActions.enterQuantity WITH "5"

        # Fill with variable
        TEXT email = "dynamic@example.com"
        PERFORM FillTestPageActions.enterEmail WITH email

        # Direct fill (still allowed for simple cases)
        FILL "email" WITH "direct@example.com"
    }
}
