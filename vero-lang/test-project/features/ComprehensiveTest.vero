# Comprehensive Vero DSL Test Scenario
# Tests major keywords and page actions

PAGE TestPage {
    FIELD heading = "h1"
    FIELD contentDiv = ".content"
    FIELD inputField = "#test-input"
    FIELD submitBtn = "button"
    FIELD resultText = ".result"
    FIELD counter = "#counter"

    fillAndSubmit WITH inputValue {
        FILL TestPage.inputField WITH inputValue
        CLICK TestPage.submitBtn
        WAIT 1 SECONDS
    }
}

FEATURE ComprehensiveTest {
    USE TestPage
    USE HomePage

    BEFORE EACH {
        OPEN "https://example.com"
    }

    SCENARIO "Test basic actions and assertions" @smoke @comprehensive {
        LOG "Starting comprehensive test"
        VERIFY TestPage.heading IS VISIBLE
        WAIT 2 SECONDS

        DO TestPage.fillAndSubmit WITH "test value"
        HOVER TestPage.heading
        PRESS "Escape"

        LOG "All tests completed successfully"
    }

    SCENARIO "Example page navigation" @smoke {
        OPEN "https://example.com/"
        CLICK HomePage.learnMore
        WAIT 1 SECONDS
        CLICK HomePage.aclick
    }
}
