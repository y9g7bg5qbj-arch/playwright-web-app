# Google Search Feature

FEATURE Search {
    USE SearchHomePage

    BEFORE EACH {
        OPEN "https://www.google.com"
    }

    SCENARIO UserCanSearchForPen @smoke {
        FILL SearchHomePage.searchInput WITH "pen"
        PRESS "Enter"
        WAIT 2 SECONDS
        VERIFY SearchHomePage.searchResults IS VISIBLE
    }

    SCENARIO SearchUsingAction @smoke {
        PERFORM SearchHomePage.searchFor WITH "pen"
        WAIT 2 SECONDS
        VERIFY SearchHomePage.searchResults IS VISIBLE
    }

    SCENARIO MultipleSearchTest @smoke {
        FILL SearchHomePage.searchInput WITH "pencil"
        PRESS "Enter"
        WAIT 2 SECONDS
        VERIFY SearchHomePage.searchResults IS VISIBLE
    }
}
