# ============================================
# ALL VERO ACTION KEYWORDS TEST
# Testing actions that are confirmed working
# ============================================

FEATURE AllActionsTest {
    USE ActionsTestPageActions

    SCENARIO TestOpenAction @actions @navigation {
        OPEN "https://example.com"
        LOG "Opened example.com"
        OPEN "https://example.com/login"
        LOG "Opened login page"
    }

    SCENARIO TestClickAction @actions @interaction {
        OPEN "https://example.com"
        PERFORM ActionsTestPageActions.clickSubmit
        LOG "Clicked submit button"
    }

    SCENARIO TestFillAction @actions @forms {
        OPEN "https://example.com/form"
        PERFORM ActionsTestPageActions.enterEmail WITH "test@example.com"
        PERFORM ActionsTestPageActions.enterPassword WITH "SecurePass123"
        LOG "Filled form fields"
    }

    SCENARIO TestCheckAction @actions @checkboxes {
        OPEN "https://example.com/preferences"
        PERFORM ActionsTestPageActions.checkAgree
        LOG "Checked checkbox"
    }

    SCENARIO TestHoverAction @actions @mouse {
        OPEN "https://example.com"
        PERFORM ActionsTestPageActions.hoverMenu
        LOG "Hovered menu icon"
    }

    SCENARIO TestPressAction @actions @keyboard {
        OPEN "https://example.com"
        PRESS "Enter"
        PRESS "Tab"
        PRESS "Escape"
        LOG "Pressed keys"
    }

    SCENARIO TestWaitActionWithTime @actions @timing {
        OPEN "https://example.com"
        WAIT 1 SECONDS
        LOG "Waited 1 second"
        WAIT 500 MILLISECONDS
        LOG "Waited 500ms"
    }

    SCENARIO TestPerformAction @actions @pageaction {
        OPEN "https://example.com/login"
        PERFORM ActionsTestPageActions.login WITH "user@test.com", "password123"
        LOG "Executed login action"
    }

    SCENARIO TestRefreshAction @actions @reload {
        OPEN "https://example.com"
        REFRESH
        LOG "Page refreshed"
    }

    SCENARIO TestLogAction @actions @logging {
        OPEN "https://example.com"
        LOG "Test started"
        LOG "Step 1 completed"
        LOG "All steps passed"
    }

    SCENARIO TestTakeScreenshotAction @actions @capture {
        OPEN "https://example.com"
        TAKE SCREENSHOT "homepage.png"
        PERFORM ActionsTestPageActions.enterEmail WITH "test@example.com"
        TAKE SCREENSHOT "after-fill.png"
    }
}
