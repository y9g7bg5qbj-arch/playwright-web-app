# Vero Agent Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Default: claude (recommended for UI agents)
# Options: claude, gemini, openai, ollama
LLM_PROVIDER=claude

# Claude Configuration (recommended)
# Model: claude-sonnet-4-20250514 (best consistency + tool use for UI agents)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Gemini Configuration (alternative for complex UIs like Salesforce)
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_MODEL=gemini-3-pro

# OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o

# Ollama Configuration (local, no API key needed)
# OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# Agent Configuration
# =============================================================================

# Maximum retry attempts for failed steps
MAX_RETRIES=20

# Path to Vero project files
VERO_PROJECT_PATH=../

# =============================================================================
# Gemini Healing (experimental)
# =============================================================================

# Use Gemini for self-healing (requires GOOGLE_API_KEY)
USE_GEMINI_HEALING=false
GEMINI_THINKING_MODEL=gemini-2.0-flash-thinking-exp-01-21
GEMINI_STANDARD_MODEL=gemini-3-pro
