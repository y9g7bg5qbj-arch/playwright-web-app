# Model Provider: gemini, claude, openai, ollama
LLM_PROVIDER=gemini

# API Keys (set the one matching your LLM_PROVIDER)
GOOGLE_API_KEY=your-google-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# OPENAI_API_KEY=your-openai-api-key

# Project path for codebase context
VERO_PROJECT_PATH=../

# Retry settings
MAX_RETRIES=20

# Gemini 2.0 Flash Thinking Configuration
# For advanced visual element detection and selector healing
GEMINI_THINKING_MODEL=gemini-2.0-flash-thinking-exp-01-21
GEMINI_STANDARD_MODEL=gemini-2.0-flash
USE_GEMINI_HEALING=true
