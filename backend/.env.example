# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB (REQUIRED)
# Get your MongoDB Atlas connection string from https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DATABASE=vero_ide

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Auth Bypass (development only - set to true to skip JWT verification)
BYPASS_AUTH=true

# CORS
CORS_ORIGIN=http://localhost:5173

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760

# Agent
AGENT_TOKEN_EXPIRES_IN=30d

# Logging
LOG_LEVEL=info

# GitHub Integration (optional - for encrypted token storage)
# Generate a random 32+ character string for production
GITHUB_TOKEN_ENCRYPTION_KEY=

# Vero Project Path (optional - defaults to ../vero-lang/test-project)
VERO_PROJECT_PATH=

# Optional path for sandbox baseline snapshots (default: backend/storage/sandbox-baselines)
SANDBOX_BASELINE_PATH=
